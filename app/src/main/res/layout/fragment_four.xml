<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C0C0"
    android:orientation="vertical">
    <!--第一块-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/touxiang"
            android:layout_width="75dp"
            android:layout_height="66dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/image1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nicheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="未设置昵称"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="ID:"
                    android:textColor="#808080"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/f4_username"
                    android:layout_width="212dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />
                <ImageButton
                    android:id="@+id/update"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/jiantou" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--第二块-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="0.1dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/ic_assignment" />

            <TextView
                android:id="@+id/bt2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginBottom="0.1dp"
                android:background="#FFFFFF"
                android:gravity="left"
                android:paddingTop="12dp"
                android:text="电子邮箱："
                android:textSize="20sp" />
            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="0.1dp"
                android:background="#FFFFFF"
                android:gravity="left"
                android:paddingTop="12dp"
                android:hint="未填写邮箱："
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="0.1dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/ic_pets" />

            <TextView
                android:id="@+id/bt3"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:gravity="left"
                android:paddingTop="12dp"
                android:text="个性签名："
                android:textSize="20sp" />
            <TextView
                android:id="@+id/signature"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:gravity="left"
                android:paddingTop="12dp"
                android:hint="未填写签名："
                android:textSize="20sp" />


        </LinearLayout>
    </LinearLayout>

    <!--第三块-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="0.1dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/ic_list" />

            <TextView
                android:id="@+id/bt4"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginBottom="0.1dp"
                android:background="#FFFFFF"
                android:gravity="left"
                android:paddingTop="12dp"
                android:text=" 性     别  ："
                android:textSize="20sp" />
            <TextView
                android:id="@+id/sex"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:gravity="left"
                android:paddingTop="12dp"
                android:hint="未选择性别"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="0.1dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/ic_favorite" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="left"
                android:paddingTop="12dp"
                android:text=" 生     日  ："
                android:textSize="20sp" />

            <TextView
                android:id="@+id/birth"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:gravity="left"
                android:paddingTop="12dp"
                android:hint="未填写生日"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="0.1dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/ic_thumb_up_orange_300_18dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:gravity="left"
                android:paddingTop="12dp"
                android:text=" 职     业  ："
                android:textSize="20sp" />

            <TextView
                android:id="@+id/job"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:gravity="left"
                android:paddingTop="12dp"
                android:hint="未填写职业"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>


    <!--第四块-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="0.1dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/ic_setting" />
            <TextView
                android:id="@+id/security"
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:layout_marginBottom="0.1dp"
                android:background="#FFFFFF"
                android:gravity="left"
                android:paddingTop="12dp"
                android:text="修改密码"
                android:textSize="20sp" />


            <ImageButton
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:src="@mipmap/jiantou" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tuichu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="0.1dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/ic_info" />
            <TextView
                android:id="@+id/bt7"
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:layout_marginBottom="0.1dp"
                android:background="#FFFFFF"
                android:gravity="left"
                android:paddingTop="12dp"
                android:text="退出登录"
                android:textSize="20sp" />
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:src="@mipmap/jiantou" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>


